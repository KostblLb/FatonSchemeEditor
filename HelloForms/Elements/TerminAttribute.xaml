<UserControl x:Class="HelloForms.TerminAttribute"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HelloForms.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Height="24" Margin="0 4 0 4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="RemoveAttrButton" Grid.Column="0" Margin="0 0 8 0" Width="24" HorizontalAlignment="Left">-</Button>
        <ComboBox x:Name="AttrNameComboBox" Grid.Column="1" HorizontalContentAlignment="Right" />
    </Grid>
</UserControl>
